{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "paths": {
      "src": [
        "src/*"
      ],
      "tests": [
        "tests/*"
      ], 
      "@components/*": [
        "src/components/*"
      ]
    }
  },
  "include": [
    "src",
    "App.tsx"
  ]
}
